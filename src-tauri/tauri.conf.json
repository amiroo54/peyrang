{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "svg-pallet-changer",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "protocol": {
        "all": true,
        "asset": true,
        "assetScope": ["/", "/tmp/pallet/"]
      },
      "dialog": {
        "all": true
      }
    },
    "windows": [
      {
        "title": "svg-pallet-changer",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": "asset:"
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.amiroof.svgpallet",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
